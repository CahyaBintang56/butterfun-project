{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "src/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/generate-image", "dest": "/api/generate-image.js" },
    { "src": "/generate-image.html", "dest": "/src/generate-image.html" },
    { "src": "/", "dest": "/src/index.html" },
    { "src": "/(.*)", "dest": "/src/$1" }
  ]
}